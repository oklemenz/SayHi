<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="de.oklemenz.sayhi.activity.NewCategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bar_shape">

        <Button
            android:id="@+id/doneButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:gravity="center|center_vertical"
            android:minWidth="0dp"
            android:onClick="onDonePressed"
            android:text="@string/Done"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxLines="2"
            android:maxWidth="200dp"
            android:paddingEnd="60dp"
            android:paddingStart="0dp"
            android:text="@string/NewCategory"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="normal" />

        <ImageButton
            android:id="@+id/helpButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/cancelButton"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/Help"
            android:onClick="onHelpPressed"
            android:src="@drawable/help" />

        <Button
            android:id="@+id/cancelButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center|center_vertical"
            android:minWidth="0dp"
            android:onClick="onCancelPressed"
            android:text="@string/Cancel"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="17sp" />

    </RelativeLayout>

    <de.oklemenz.sayhi.view.ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_span="3"
                    android:background="@drawable/group_shape"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/cellDedent"
                    android:paddingStart="@dimen/cellIndent"
                    android:text="@string/Details"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/cellDedent"
                    android:paddingStart="@dimen/cellIndent"
                    android:text="@string/Language"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/languageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_span="2"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/cellIndent"
                    android:paddingStart="@dimen/cellIndent"
                    android:text="@string/German"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_span="3"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/Name"
                    android:imeOptions="actionDone"
                    android:inputType="text|textCapWords|textAutoCorrect"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/cellDedent"
                    android:paddingStart="@dimen/cellIndent"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

            </TableRow>

            <TableRow
                android:id="@+id/primaryReferenceCell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_span="3"
                    android:background="@drawable/group_shape"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/cellDedent"
                    android:paddingStart="@dimen/cellIndent"
                    android:text="@string/PrimaryReference"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:id="@+id/primaryReferenceLangCell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/cellDedent"
                    android:paddingStart="@dimen/cellIndent"
                    android:text="@string/Language"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/primaryLanguageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_span="2"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/cellIndent"
                    android:paddingStart="@dimen/cellIndent"
                    android:text="@string/English"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent" />

            </TableRow>

            <TableRow
                android:id="@+id/primaryReferenceCategoryCell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:clickable="true"
                android:onClick="onCreatePrimaryLangCategoryPressed">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_span="1"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/cellDedent"
                    android:paddingStart="@dimen/cellIndent"
                    android:text="@string/Category"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2">

                    <LinearLayout
                        android:id="@+id/primaryLangCategoryContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/addPrimaryLangCategoryButton"
                        android:gravity="end|center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp" />

                    <ImageButton
                        android:id="@+id/addPrimaryLangCategoryButton"
                        android:layout_width="25dp"
                        android:layout_height="34dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:background="?android:selectableItemBackground"
                        android:contentDescription="@string/PrimaryReference"
                        android:gravity="end|center_vertical"
                        android:onClick="onCreatePrimaryLangCategoryPressed"
                        android:src="@drawable/plus" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:id="@+id/primaryReferenceHintCell"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_span="3"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/cellDedent"
                    android:paddingStart="@dimen/cellIndent"
                    android:text="@string/ProvidePrimaryLangCategory"
                    android:textSize="12.5sp" />
            </TableRow>

        </TableLayout>

    </de.oklemenz.sayhi.view.ScrollView>

</LinearLayout>