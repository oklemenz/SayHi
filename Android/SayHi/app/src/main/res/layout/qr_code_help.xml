<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/selectCategoryArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-4dp"
        android:contentDescription="@string/Help"
        android:src="@drawable/arrow_r" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_toStartOf="@id/selectCategoryArrow"
        android:gravity="end"
        android:text="@string/ShowTagsCurrentProfile"
        android:textColor="@android:color/white" />

    <ImageView
        android:id='@+id/arrowUpLeft'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/Help"
        android:src="@drawable/arrow_ul" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrowUpLeft"
        android:layout_toEndOf="@id/arrowUpLeft"
        android:layout_marginTop="-15dp"
        android:layout_marginStart="-10dp"
        android:gravity="start"
        android:text="@string/RecognitionHints"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="44dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/previewContainer"
        android:layout_below="@id/navBar"
        android:layout_marginTop="-5dp"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="100%">

    </RelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/previewContainer"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrowDownMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/Help"
            android:src="@drawable/arrow_d" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/arrowDownMiddle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:text="@string/LivePreview"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/cameraPreview">

            <ImageView
                android:id="@+id/arrowBottomLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/Help"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                android:paddingTop="20dp"
                android:src="@drawable/arrow_ur" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/arrowBottomLeft"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-15dp"
                android:gravity="start"
                android:text="@string/ChangeCorrectionLevel"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/cameraPreview"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/Help"
            app:layout_aspectRatio="56.25%"
            app:layout_heightPercent="100%" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/cameraPreview">

            <ImageView
                android:id="@+id/arrowBottomRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/Help"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:paddingTop="20dp"
                android:src="@drawable/arrow_ul" />

            <TextView
                android:id="@+id/qrCodeRecognitionActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/arrowBottomRight"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="-10dp"
                android:gravity="end"
                android:text="@string/QRCodeRecognitionActive"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </android.support.percent.PercentRelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:layout_centerInParent="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/helpContainerPageView"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/helpContainerPageIndicatorView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/helpContainerPageView"
            android:layout_marginTop="235dp" />
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>