<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/similarTagItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tagItemLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <include
            android:id="@+id/tagItemView"
            layout="@layout/tag_view" />

        <TextView
            android:id="@+id/tagPrimaryLangLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/EN"
            android:textColor="@color/colorAccent" />

        <include
            android:id="@+id/primaryLangTagItemView"
            layout="@layout/tag_view" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryItemLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <include
            android:id="@+id/categoryItemView"
            layout="@layout/category_view" />

        <TextView
            android:id="@+id/categoryPrimaryLangLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/EN"
            android:textColor="@color/colorAccent" />

        <include
            android:id="@+id/primaryLangCategoryItemView"
            layout="@layout/category_view" />

    </LinearLayout>

</LinearLayout>